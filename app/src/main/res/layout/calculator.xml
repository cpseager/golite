<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:id="@+id/scrollview" >
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/sounds_table" android:layout_width="@dimen/sounds_panel_width" android:layout_height="@dimen/sounds_panel_height"
            xmlns:android="http://schemas.android.com/apk/res/android" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose your level"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level1"
                android:text="1"
                android:background="@drawable/roundedbutton_green"
                android:layout_margin="5dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level2"
                    android:text="2"
                android:background="@drawable/roundedbutton_red"
                android:layout_margin="5dp"/>
             <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level3"
                    android:text="3"
                 android:background="@drawable/roundedbutton_red"
                 android:layout_margin="5dp"/>

            </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:orientation="horizontal"
              android:layout_margin="10dp"
              android:layout_gravity="center_horizontal" >
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:id="@+id/firstValue"
                android:text="1" android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/operator"
                android:text="+" android:textSize="30sp"/>
            <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:id="@+id/secondValue"
                android:text="1" android:textSize="30sp"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:id="@+id/equals"
                  android:text="=" android:textSize="30sp"
                  android:layout_marginRight="5dp"/>
              <EditText
                  android:id="@+id/inputField"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="30sp"
                  android:inputType="phone"
                  android:digits="1234567890"
                  android:maxLength="2"/>
          </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkCalcButton"
                android:text="check"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/roundedbutton_yellow"
                android:paddingRight="5dp"/>
            </LinearLayout>
          <LinearLayout
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/againLL"
              android:orientation="horizontal"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="5dp">
              <Button
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/againButton"
                  android:text="Try again?"
                  android:layout_gravity="center_horizontal"
                  android:background="@drawable/roundedbutton_green"/>
          </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>